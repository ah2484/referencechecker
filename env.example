# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Email (Resend)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Reference Validator

# AI/NLP (OpenAI)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# LinkedIn Integration (Optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
POLYGON_RPC_URL=https://polygon-rpc.com
CONTRACT_ADDRESS=your_credential_registry_contract_address
PRIVATE_KEY=your_issuer_private_key
IPFS_GATEWAY=https://ipfs.io/ipfs/
CERAMIC_NODE_URL=https://ceramic-clay.3boxlabs.com

# Zero-Knowledge Proofs
SEMAPHORE_CONTRACT_ADDRESS=your_semaphore_contract_address
CIRCUIT_PATH=./circuits/employment_proof.circom

# File Storage
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Reference Link Expiration (in days)
REFERENCE_LINK_EXPIRY_DAYS=7

# Admin Configuration
ADMIN_EMAILS=admin1@company.com,admin2@company.com
HR_EMAILS=hr1@company.com,hr2@company.com

# Monitoring (Optional)
SENTRY_DSN=your_sentr_dsn
ANALYTICS_ID=your_analytics_id

# Development
DEBUG=true
LOG_LEVEL=info 